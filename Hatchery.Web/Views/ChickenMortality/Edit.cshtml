@model Nepaltech.Models.Forms.ChickenMortalityModel

@{
    ViewBag.Title = "Edit";
    Layout = null;
}
@*<form action="@(Url.Action("Edit"))" method="post" class="nt-form" id="form-add-chickenmortality">*@

    @Html.HiddenFor(model => model.Id)
<form action="@(Url.Action("Edit"))" method="post" class="nt-form" id="form-add-chickenmortality">
    @Html.HiddenFor(model => model.BatchId)
    @Html.HiddenFor(model => model.LocationId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-offset-0 col-md-3"> <div> <label class="control-label" for="batchid">BatchId</label> </div> </div>
        <div class="col-md-offset-0 col-md-6"> <div> @Html.DisplayFor(m => m.BatchCode, new { @name = "BatchChickenId" }) </div> </div>
    </div>

    <div class="row">
        <div class="col-md-offset-0 col-md-3"> <div> <label class="control-label" for="MortalityPercentage">MortalityPercentage</label> </div> </div>
        <div class="col-md-offset-0 col-md-6">
            <div>
                @*@Html.EditorFor(model => model.MortalityPercentage, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.Kendo().IntegerTextBoxFor(m=>m.MortalityPercentage).HtmlAttributes(new { @min = "0" })
                @Html.ValidationMessageFor(model => model.MortalityPercentage, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-offset-0 col-md-3"> <div> <label class="control-label" for="age">DeadChickenMale</label> </div> </div>
        <div class="col-md-offset-0 col-md-6">
            <div class="col-10">
                <div>
                    @Html.Kendo().IntegerTextBoxFor(m => m.DeadChickenMale).HtmlAttributes(new { @min = "0" })
                    @Html.ValidationMessageFor(model => model.DeadChickenMale, "", new { @class = "text-danger" })
                </div>
            
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-offset-0 col-md-3"> <div> <label class="control-label" for="DeadChickenFemale">DeadChickenFemale</label> </div> </div>
        <div class="col-md-offset-0 col-md-6">
            <div>
                @Html.Kendo().IntegerTextBoxFor(m => m.DeadChickenFemale).HtmlAttributes(new { @min = "0" })
                @Html.ValidationMessageFor(model => model.DeadChickenFemale, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-offset-0 col-md-3"> <div> <label class="control-label" for="DateEntry">DateEntry</label> </div> </div>
        <div class="col-md-offset-0 col-md-6">
            <div>
                @(Html.Kendo().DatePicker()
                  .Name("DateEntry")
                  .HtmlAttributes(new { style = "width: 100%", title = "datepicker" })
                )
            </div>
        </div>
    </div>
    @Html.HiddenFor(model => model.DateCreated)
    <div>
        <input type="submit" value="Save" class="btn btn-default" />
        @*@Html.ActionLink("Back to List", "Index",new { @class = "btn btn-primary" })*@
    </div>

</form>
<script>
    function filterProducts() {
        return {
            //breeds: $("#breedId").html()
            breeds: "@Model.BreedId"
        };
    }
</script>
