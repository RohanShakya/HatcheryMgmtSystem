
@{
    ViewBag.Title = "Index";
}

<h2>Countries</h2>

<div>
    @Html.ActionLink("Add new Record", "Create", null, new { @class = "btn btn-primary", id = "add-country" })
</div>
<div id="example">
    @(Html.Kendo().Grid<Nepaltech.Models.Forms.CountryModel>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.Id).Hidden();
        columns.Bound(p => p.CountryName).ClientTemplate("<a href='/Country/Details/#=Id#'>#=CountryName#</a>");
        columns.Template(@<text>option</text>).ClientTemplate(
                                                               "<a onclick=\"updateCountry(event,this)\" href=\"/Country/edit/#: Id#\" class=\"k-button k-button-icontext edit-roomType\"><span class=\"k-icon k-edit\"></span>Edit</a>" +
                                                               "<form onsubmit=\"removeCountry(event,this)\" method=\"post\" class=\"k-grid-actions\" action=\"/Country/delete?Id=#: Id#\"><div><button  type=\"submit\" class=\"k-button k-button-icontext k-grid-delete\"><span class=\"k-icon k-delete\"></span>Delete</button></div>" +
                                                               "</form>"
                          );


    })
    .Pageable()
    .Sortable()
    .Scrollable()
    //.Filterable()
    .HtmlAttributes(new { style = "height:550px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Read(read => read.Action("GetCountries", "Country"))
        .Sort(x => x.Add("CountryName").Ascending())
     )
    )
</div>

@(Html.Kendo().Window()
.Name("window-update-country")
.Title("Update Country")
//.HtmlAttributes(new{@class="col-md-10"})
//.Width(500)
//.Height(500)
.Modal(true)
.Visible(false)
.Draggable(true)


)


@section scripts{
    <script type="text/javascript">
        var chargetypeUpdateWindow;
        var countrygrid;

        function updateCountry(e, link) {
            e.preventDefault();
            $.get(link.href, null, function (response) {
                chargetypeUpdateWindow.open();
                chargetypeUpdateWindow.center();
                chargetypeUpdateWindow.content(response);

            });

        }
        function removeCountry(e, element) {
            e.preventDefault();
            if (window.confirm("are you sure you want to permanently remove payment Type ")) {

                $.ajax({
                    type: "POST",
                    url: element.action,
                    data: null,
                    success: function (data, statusCode, xhr) {
                        if (data === 1) {
                            countrygrid.dataSource.read();
                            updateBillingDetail();
                        }
                    },
                    error: function (xhr, errorType, exception) { //Triggered if an error communicating with server
                        var errorMessage = exception || xhr.statusText; //If exception null, then default to xhr.statusText
                        alert(xhr.statusText);
                    }

                });

            };
        }


        $(function () {
            chargetypeUpdateWindow = $('#window-update-country').data('kendoWindow');
            countrygrid = $('#grid ').data('kendoGrid');
            $('#add-country').click(function (e) {

                $.get($(this).attr('href'), null, function (response) {
                    chargetypeUpdateWindow.content(response);
                    chargetypeUpdateWindow.open();
                    chargetypeUpdateWindow.center();
                });
                e.preventDefault();
            });

            $('body').on('submit', '#form-add-country', function (e) {
                e.preventDefault();

                $.post($(this).attr('action'), $(this).serialize(), function (response) {
                    if (response == 1) {
                        chargetypeUpdateWindow.close();
                        countrygrid.dataSource.read();
                    } else {
                        chargetypeUpdateWindow.content(response);

                    }

                });

            });

       })
    </script>

}
