@model Nepaltech.Models.Forms.FeedModel
@{
    ViewBag.Title = "Create";
    Layout = null;
}
<form action="@(Url.Action("Create"))" method="post" class="nt-form" id="form-add-feed">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-3"> @Html.LabelFor(model => model.FeedName) </div>
                <div class="col-md-6">
                    @Html.Kendo().TextBoxFor(m => m.FeedName)
                    @Html.ValidationMessageFor(model => model.FeedName, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-md-3"> @Html.LabelFor(model => model.Price) </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                    @*@Html.Kendo().TextBoxFor(m => m.Price)*@
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-0 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
