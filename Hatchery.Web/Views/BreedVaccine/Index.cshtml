@{
    ViewBag.Title = "Index";
}
@model string


    @(Html.Kendo().Grid<Nepaltech.Models.Forms.BreedVaccineModel>()
    .Name("Breedvaccinegrid")
    .Columns(columns =>
    {
    columns.Bound(p => p.Id).Hidden();
    columns.Bound(p => p.Breed);
    columns.Bound(p => p.Age).ClientTemplate("#=Age#" + " days");
    //columns.Bound(p => p.FarmId);
    columns.Bound(p => p.Vaccine);
    columns.Template(@<text>option</text>).ClientTemplate("<a onclick=\"updatebreedvaccine(event,this)\" href=\"/BreedVaccine/edit/#: Id#\" class=\"k-button k-button-icontext edit-roomType\"><span class=\"k-icon k-edit\"></span>Edit</a>" +
                                                               "<form onsubmit=\"deletebreedvaccine(event,this)\" method=\"post\" class=\"k-grid-actions\" action=\"/BreedVaccine/delete?Id=#: Id#\"><div><button  type=\"submit\" class=\"k-button k-button-icontext k-grid-delete\"><span class=\"k-icon k-delete\"></span>Delete</button></div>" +
                                                               "</form>"

                          );


    })
    .Pageable()
    .Sortable()
    .Scrollable()
    //.Filterable()
    .HtmlAttributes(new { style = "height:550px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Read(read => read.Action("GetAllVaccine", "BreedVaccine",new { id = Model }))
        .Sort(x => x.Add("Age").Ascending())
     )
    )




    @(Html.Kendo().Window()
.Name("window-update-breedvaccine")
.Title("Update breedvaccine")
//.HtmlAttributes(new{@class="col-md-10"})
.Width(300)
//.Height(500)
.Modal(true)
.Visible(false)
.Draggable(true)
    )


   
